<resources>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">#FFF0F3F7</item>
        <item name="titleTextColor">#FF333333</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@anim/no_anim</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="android:actionBarSize">48dp</item>
    </style>
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
