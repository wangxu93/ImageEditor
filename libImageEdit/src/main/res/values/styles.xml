<resources>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">#FFF0F3F7</item>
        <item name="titleTextColor">#FF333333</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@anim/no_anim</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="android:actionBarSize">48dp</item>
    </style>
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">3px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar_bg</item>
        <item name="android:minHeight">3px</item>
        <item name="android:thumb">@drawable/icon_seekbar_thumb</item>
    </style>

    <style name="popupwindow_anmation">
        <item name="android:windowEnterAnimation">@anim/toolbar_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/toolbar_out_bottom</item>
    </style>

    <style name="menu_text_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btn_menu_style" parent="menu_text_black">
        <item name="android:background">@drawable/menu_btn_sure_bg</item>
    </style>

</resources>
